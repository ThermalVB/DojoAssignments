@using System;
@{
    DateTime currentTime = DateTime.Now;
    DateTime currentDate = DateTime.Today;
    string formattedDate = String.Format("{0:MMM d, yyyy}", currentDate);
    string formattedTime = String.Format("{0:hh:mm tt}", currentDate);
    System.Console.WriteLine(formattedDate);
    System.Console.WriteLine(formattedTime);
    }
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Hello!</title>
    </head>
    <body>
        <h1>The current date and time:</h1>
        <p>@formattedDate</p>
        <p>@formattedTime</p>
    </body>
</html>